<div class="container">
    <h1 style="text-align: center;">Welcome to WebChat Application</h1>
    <br>
    <br>
    <% if (current_user) { %>
        <div class="jumbotron">
            <h1 class="display-4">
                <%= current_user.firstname %>
                    <%= current_user.lastname %>
            </h1>
            <h5>
                <%= current_user.email %>
            </h5>

            <hr class="my-4">

            <div style="text-align: center;">
                <a class="btn btn-light" href="/chat"> <i class="fa fa-comments msg-botton-icon" aria-hidden="true"> Chat </i></a>
                <br>

                <a class="btn btn-light mt-3" href="/game" style="text-align: center;"> <i class="fa msg-botton-icon" aria-hidden="true"><img src="/images/game_icon.svg" alt="" width="15%" height="15%"> Game </i> </a>
                <br>

                <a class="btn btn-light mt-3" href="/logout"><i class="fa msg-botton-icon" aria-hidden="true"> Logout </i> <i class="fa fa-sign-out msg-botton-icon" aria-hidden="true"></i></a>
            </div>
        </div>
        <% } else { %>
            <div style="text-align: center;">
                <a class=" btn btn-light mt-3 " href="/auth/google "> <img src="/images/google-logo.png " style="height: 30px; "> Login with Google </a>
                <br>

                <a class="btn btn-light mt-3" href="/chat "> <i class="fa fa-comments msg-botton-icon " aria-hidden="true"> Chat </i></a>
                <br>

                <a class="btn btn-light mt-3" href="/game" style="text-align: center;"> <i class="fa msg-botton-icon" aria-hidden="true"><img src="/images/game_icon.svg" alt="" width="15%" height="15%"> Game </i> </a>
            </div>
            <% } %>
</div>