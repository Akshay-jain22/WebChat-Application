<h2 style="text-align: center; color: var(--badge-border);  border: 2px solid white">Profile</h2>
<br>

<div class="active mt-3" style="text-align: center;">
    <img class="user-img img-fluid" src="<%= current_user.profile_pic_url %>" alt="profile">

    <div class="user-details current_user" id="<%= current_user._id %>" style="margin: 0 auto;">
        <div class="user-name">
            <strong>
                <%= current_user.firstname %>
                    <%= current_user.lastname %>
            </strong>
            <br>
            <strong>
                <%= current_user.email %>
            </strong>
        </div>
    </div>
</div>

<br>

<div class="text-center">
    <a class="btn btn-light" href="/logout"> Logout <i class="fa fa-sign-out msg-button-icon" aria-hidden="true"></i>
    </a>
    <a class="btn btn-light" href="/"> Back </a>
</div>

<br>
<br>

<div class="online-user-container">
    <% connections.forEach((value, index, array)=> { %>
        <div class="users" style="border: 2px grey solid; margin: 1%">
            <img class="user-img img-fluid" src="<%= value.user_id.profile_pic_url%>" alt="profile">

            <div class="user-details" id="<%= value.user_id._id %>">
                <div class="user-name">
                    <%= value.user_id.firstname %>
                        <%= value.user_id.lastname %>
                </div>
            </div>
        </div>
        <% }); %>
</div>